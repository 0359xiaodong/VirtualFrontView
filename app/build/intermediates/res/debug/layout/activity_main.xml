<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:color="@android:color/background_light">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/main_text"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/stop_discovery_button"
            android:text="@string/stop_discovery_text"
            android:layout_gravity="center"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/wifi_discoverable_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_discoverable_text"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/wifi_connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_connect_text"
            android:layout_gravity="center"
            android:enabled="false" />

        <TextView
            android:id="@+id/wifi_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_status_text"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/discovery_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discovery_status_text"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_purple"/>

        <TextView
            android:id="@+id/group_owner_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/bitrate_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/bitrate_array"
                android:prompt="@string/bitrate_prompt"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/resolution_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/resolution_array"
                android:prompt="@string/resolution_prompt"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/server_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/server_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ip_text"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Enter source IP..."
                android:textSize="24sp" />

            <Button
                android:id="@+id/client_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/client_button" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/D/AndroidStudioProjects/VirtualFrontView/app/src/main/res/layout/activity_main.xml -->